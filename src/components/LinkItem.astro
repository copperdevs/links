---
import Divider from "./Divider.astro";
import FontAwesomeIcon from "./FontAwesomeIcon.astro";

interface Props {
  title: string;
  displayText: string;
  url: string;
  icon: string;
}

const { title, displayText, url, icon } = Astro.props;
---

<div>
  <div class="text-gradient link-tree-link-list-headers">
    <FontAwesomeIcon iconName=`${icon}` targetUrl={url} />
  </div>

  <h3 class="project-item-header link-tree-link-list-headers">
    <a href={url}>
      <span class="text-gradient">{title}</span>
    </a>
  </h3>

  <Divider />

  <h4 class="color-gray-dark-white-hover link-tree-link-list-headers">
    <span>{displayText}</span>
  </h4>
</div>
